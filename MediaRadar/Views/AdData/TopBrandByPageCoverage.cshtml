@model IEnumerable<MediaRadar.ServiceReference.Ad>

@{
    ViewBag.Title = "Top Five Brand By Page Coverage";
}

<h3 class="well well-sm" ><span class="glyphicon glyphicon-list-alt" style="color:#f93"> </span> &nbsp;<strong>Top Five Brand By Page Coverage</strong></h3>
<table id="adlist" class="table table-striped table-hover ">
    <thead>
        <tr>

            <th>Brand ID</th>
            <th>Brand Name</th>
            <th>NumPage</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var ads in Model)
        {
            <tr>

                <td>@ads.Brand.BrandId</td>
                <td>@ads.Brand.BrandName</td>
                <td>@ads.NumPages</td>

            </tr>
        }

    </tbody>

</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            var dataTable = $("#adlist").DataTable();
            dataTable.order([[2, 'desc'],[1,'asc']]).draw();
        });
    </script>

}





